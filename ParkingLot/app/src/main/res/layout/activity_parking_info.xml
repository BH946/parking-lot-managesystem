<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#000000"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="350dp"
                    android:orientation="vertical">

                    <com.naver.maps.map.MapView
                        android:id="@+id/mapView"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="위 치"
                        android:textColor="#D391A7"
                        android:textSize="24dp"
                        android:fontFamily="@font/font"
                        android:drawablePadding="8dp"
                        android:drawableLeft="@drawable/ic_location" />

                    <TextView
                        android:id="@+id/parking_road"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingLeft="30dp"
                        android:text="부산광역시 사하구 낙동대로"
                        android:textColor="@color/white"
                        android:textSize="20dp"
                        android:letterSpacing="0.05"
                        android:fontFamily="@font/font"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingTop="10dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="시간요금"
                        android:textColor="#D391A7"
                        android:textSize="24dp"
                        android:fontFamily="@font/font"
                        android:drawablePadding="8dp"
                        android:letterSpacing="0.05"
                        android:drawableLeft="@drawable/ic_money" />

                    <TableLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingLeft="30dp"
                        android:paddingRight="30dp"
                        android:stretchColumns="*">

                        <TableRow>

                            <TextView
                                android:text="기본요금"
                                android:textColor="@color/white"
                                android:textSize="20dp"
                                android:letterSpacing="0.05"
                                android:fontFamily="@font/font"/>

                            <TextView
                                android:gravity="right"
                                android:text="60분 3,000원"
                                android:textColor="@color/white"
                                android:textSize="20dp"
                                android:letterSpacing="0.05"
                                android:fontFamily="@font/font"/>
                        </TableRow>
                    </TableLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingTop="10dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="운영시간"
                        android:textColor="#D391A7"
                        android:textSize="24dp"
                        android:fontFamily="@font/font"
                        android:drawablePadding="8dp"
                        android:letterSpacing="0.05"
                        android:drawableLeft="@drawable/ic_time"  />

                    <TableLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingLeft="30dp"
                        android:paddingRight="30dp"
                        android:stretchColumns="*">

                        <TableRow>

                            <TextView
                                android:text="평일 오픈"
                                android:textColor="@color/white"
                                android:textSize="20dp"
                                android:letterSpacing="0.05"
                                android:fontFamily="@font/font"/>

                            <TextView
                                android:id="@+id/opentime_weekday"
                                android:gravity="right"
                                android:text="XX:XX"
                                android:textColor="@color/white"
                                android:textSize="20dp"
                                android:letterSpacing="0.05"
                                android:fontFamily="@font/font"/>

                        </TableRow>
                        <TableRow>

                            <TextView
                                android:text="평일 마감"
                                android:textColor="@color/white"
                                android:textSize="20dp"
                                android:letterSpacing="0.05"
                                android:fontFamily="@font/font"/>

                            <TextView
                                android:id="@+id/closetime_weekday"
                                android:gravity="right"
                                android:text="XX:XX"
                                android:textColor="@color/white"
                                android:textSize="20dp"
                                android:letterSpacing="0.05"
                                android:fontFamily="@font/font"/>

                        </TableRow>
                        <TableRow>

                            <TextView
                                android:text="토요일 오픈"
                                android:textColor="@color/white"
                                android:textSize="20dp"
                                android:letterSpacing="0.05"
                                android:fontFamily="@font/font"/>

                            <TextView
                                android:id="@+id/opentime_saturday"
                                android:gravity="right"
                                android:text="XX:XX"
                                android:textColor="@color/white"
                                android:textSize="20dp"
                                android:letterSpacing="0.05"
                                android:fontFamily="@font/font"/>

                        </TableRow>
                        <TableRow>

                            <TextView
                                android:text="토요일 마감"
                                android:textColor="@color/white"
                                android:textSize="20dp"
                                android:letterSpacing="0.05"
                                android:fontFamily="@font/font"/>

                            <TextView
                                android:id="@+id/closetime_saturday"
                                android:gravity="right"
                                android:text="XX:XX"
                                android:textColor="@color/white"
                                android:textSize="20dp"
                                android:letterSpacing="0.05"
                                android:fontFamily="@font/font"/>

                        </TableRow>
                        <TableRow>

                            <TextView
                                android:text="공휴일 오픈"
                                android:textColor="@color/white"
                                android:textSize="20dp"
                                android:letterSpacing="0.05"
                                android:fontFamily="@font/font"/>

                            <TextView
                                android:id="@+id/opentime_holiday"
                                android:gravity="right"
                                android:text="XX:XX"
                                android:textColor="@color/white"
                                android:textSize="20dp"
                                android:letterSpacing="0.05"
                                android:fontFamily="@font/font"/>

                        </TableRow>
                        <TableRow>

                            <TextView
                                android:text="공휴일 마감"
                                android:textColor="@color/white"
                                android:textSize="20dp"
                                android:letterSpacing="0.05"
                                android:fontFamily="@font/font"/>

                            <TextView
                                android:id="@+id/closetime_holiday"
                                android:gravity="right"
                                android:text="XX:XX"
                                android:textColor="@color/white"
                                android:textSize="20dp"
                                android:letterSpacing="0.05"
                                android:fontFamily="@font/font"/>

                        </TableRow>
                    </TableLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingTop="10dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="전 화"
                        android:textColor="#D391A7"
                        android:textSize="24dp"
                        android:fontFamily="@font/font"
                        android:drawablePadding="8dp"
                        android:drawableLeft="@drawable/ic_call"  />

                    <TextView
                        android:id="@+id/parking_tel"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingLeft="30dp"
                        android:text="010-1234-5678"
                        android:textColor="#D391A7"
                        android:textSize="20dp"
                        android:fontFamily="@font/font" />
                </LinearLayout>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>

    <!--    하단의 예약하기 버튼-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <android.widget.Button
            android:id="@+id/showReservation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="예 약 하 기"
            android:textColor="#ffffff"
            android:textSize="20dp"
            android:fontFamily="@font/font"
            android:background="@drawable/btn_login" />
    </LinearLayout>


</LinearLayout>